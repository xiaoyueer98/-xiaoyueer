	<script type="text/javascript">
	     
           function showDiv1() {
		$.layer({
		    type: 1,
		    title: false,
		    area: ['500px', '280'],
         	    btns: 2,
		    btn: ['确定', '取消'],
		    zIndex: 1,
		    page: {
		        dom: '#showDiv'
		    }, success: function() {
		        layer.shift('top'); //左边动画弹出
		    }
		});
            }
          
       </script>
      
